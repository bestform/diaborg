{% set currentdate = "xx" %}
{% for entry in entries %}
    <div class="entry" style="page-break-inside:avoid">
        {% if currentdate != entry.date %}
            <hr>
            <h4 class="text-right"><img src="/images/glyphicons_045_calendar.png" /> {{ entry.date }}</h4>
            {% set currentdate = entry.date %}
        {% endif %}
        <strong><img src="/images/glyphicons_054_clock.png" /> {{ entry.time }}</strong>
        <p class="diaborgcontrols">
            <a href="/index.php/delete?id={{ entry.key }}"<i class="icon-remove-sign"></i></a>
        </p>
        <dl class="dl-horizontal">
            {% if entry.values.value != '' %}
            <dt style="padding-top: 20px"><img src="/images/glyphicons_019_heart_empty.png" /></dt>
            <dd><h3>
                    {{ entry.values.value }}
                </h3>
            </dd>
            <dd></dd>
            {% endif %}
            {% if entry.values.insulin != '' %}
            <dt><img src="/images/glyphicons_090_eyedropper.png" /></dt>
            <dd>
                {{ entry.values.insulin }}
            </dd>
            {% endif %}
            {% if entry.values.BE != '' %}
            <dt><img src="/images/glyphicons_272_cake.png" /></dt>
            <dd>
               {{ entry.values.BE }}
            </dd>
            {% endif %}
        </dl>
    </div>
{% endfor %}